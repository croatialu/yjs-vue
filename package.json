{
  "name": "yjs-vue",
  "type": "module",
  "version": "0.0.1-beta.1",
  "packageManager": "bun@1.1.2",
  "description": "Vue bindings for Yjs.",
  "author": "Croatia Lu <wuli.croatia@foxmail.com>",
  "license": "MIT",
  "funding": "https://github.com/sponsors/croatialu",
  "homepage": "https://github.com/croatialu/yjs-vue#readme",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/croatialu/yjs-vue.git"
  },
  "bugs": "https://github.com/croatialu/yjs-vue/issues",
  "keywords": [
    "vue",
    "composable",
    "yjs",
    "state-management",
    "peer-to-peer",
    "p2p",
    "distributed",
    "local-first",
    "offline-first",
    "crdt",
    "decentralized",
    "shared-editing",
    "realtime"
  ],
  "sideEffects": false,
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js"
    }
  },
  "main": "./dist/index.js",
  "module": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "typesVersions": {
    "*": {
      "*": [
        "./dist/*",
        "./dist/index.d.ts"
      ]
    }
  },
  "files": [
    "dist"
  ],
  "scripts": {
    "build": "bun run ./scripts/build.ts && bun run build:declaration",
    "build:declaration": "tsc --emitDeclarationOnly --project tsconfig.types.json",
    "dev": "bun run build --watch",
    "lint": "eslint .",
    "prepublishOnly": "nr build",
    "release": "bumpp",
    "start": "bun run --watch ./src/index.ts",
    "test": "vitest",
    "typecheck": "tsc --noEmit",
    "prepare": "simple-git-hooks",
    "docs:dev": "vitepress dev docs",
    "docs:build": "vitepress build docs",
    "docs:preview": "vitepress preview docs"
  },
  "peerDependencies": {
    "@vue/composition-api": "^1.0.0-rc.1",
    "vue": "^2.0.0 || >=3.0.0"
  },
  "peerDependenciesMeta": {
    "@vue/composition-api": {
      "optional": true
    }
  },
  "dependencies": {
    "immer": "^10.0.4",
    "vue": "^3.0.0",
    "vue-demi": "latest",
    "y-indexeddb": "^9.0.12",
    "y-protocols": "^1.0.6",
    "y-webrtc": "^10.3.0",
    "y-websocket": "^2.0.2",
    "yjs": "^13.6.14"
  },
  "devDependencies": {
    "@antfu/eslint-config": "^2.14.0",
    "@antfu/ni": "^0.21.12",
    "@antfu/utils": "^0.7.7",
    "@types/bun": "^1.1.0",
    "@types/node": "^20.12.7",
    "bumpp": "^9.4.0",
    "bun-plugin-dts": "^0.2.3",
    "eslint": "^9.0.0",
    "gitmoji-cli": "^9.2.0",
    "lint-staged": "^15.2.2",
    "rimraf": "^5.0.5",
    "simple-git-hooks": "^2.11.1",
    "typescript": "^5.4.5",
    "unbuild": "^2.0.0",
    "vite": "^5.2.9",
    "vitepress": "^1.1.3",
    "vitest": "^1.5.0"
  },
  "simple-git-hooks": {
    "pre-commit": "bunx lint-staged"
  },
  "lint-staged": {
    "*": "eslint --fix"
  },
  "publishConfig": {
    "registry": "https://registry.npmjs.org",
    "access": "public"
  }
}
